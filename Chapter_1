EXERCISE 1
public class TableAndChairs {
    public static void main(String[] args) {
    
        System.out.println("X                        X");
        System.out.println("X       XXXXXXXXXX       X");
        System.out.println("XXXXX   X        X   XXXXX");
        System.out.println("X   X   X        X   X   X");
        System.out.println("X   X   X        X   X   X");
    }
}


EXERCISE 2
public class FavoriteSong {
    public static void main(String[] args) {
        System.out.println("Not because of who I am,");
        System.out.println("But because of what You’ve done.");
        System.out.println("Not because of what I’ve done,");
        System.out.println("But because of who You are.");
    }
}


EXERCISE 3
import javax.swing.JOptionPane;

public class FirstDialog {
    public static void main(String[] args) {
        JOptionPane.showMessageDialog(null, "First Java Dialog Box!");
    }
}


EXERCISE 4
public class Comments {
    public static void main(String[] args) {
        
        String singleLine = "Example of a Single-line comment:\n// This is a single-line comment";
        
        String multiLine = "Example of a Multi-line comment:\n/* This is a multi-line comment */";
        
        String docComment = "Example of a Documentation comment:\n/** This is a documentation comment */";
        
        System.out.println(singleLine + "\n");
        System.out.println(multiLine + "\n");
        System.out.println(docComment);
    }
}
